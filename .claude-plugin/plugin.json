{
  "name": "callme",
  "version": "1.0.1",
  "description": "Claude calls you on the phone when it needs your input or wants to report progress",
  "author": {
    "name": "ZeframLou",
    "url": "https://github.com/ZeframLou"
  },
  "repository": "https://github.com/ZeframLou/call-me",
  "license": "MIT",
  "keywords": ["phone", "voice", "calls", "input"],
  "skills": "./skills",
  "mcpServers": {
    "callme": {
      "command": "bash",
      "args": ["-c", "cd ${CLAUDE_PLUGIN_ROOT}/server && npx tsx src/index.ts"],
      "env": {
        "CALLME_PHONE_PROVIDER": "${CALLME_PHONE_PROVIDER:-twilio}",
        "CALLME_PHONE_ACCOUNT_SID": "${CALLME_PHONE_ACCOUNT_SID}",
        "CALLME_PHONE_AUTH_TOKEN": "${CALLME_PHONE_AUTH_TOKEN}",
        "CALLME_PHONE_NUMBER": "${CALLME_PHONE_NUMBER}",
        "CALLME_USER_PHONE_NUMBER": "${CALLME_USER_PHONE_NUMBER}",
        "CALLME_OPENAI_API_KEY": "${CALLME_OPENAI_API_KEY}",
        "CALLME_TTS_VOICE": "${CALLME_TTS_VOICE:-onyx}",
        "CALLME_NGROK_AUTHTOKEN": "${CALLME_NGROK_AUTHTOKEN}",
        "CALLME_PORT": "${CALLME_PORT:-3333}",
        "CALLME_TRANSCRIPT_TIMEOUT_MS": "${CALLME_TRANSCRIPT_TIMEOUT_MS:-180000}",
        "CALLME_STT_SILENCE_DURATION_MS": "${CALLME_STT_SILENCE_DURATION_MS:-800}",
        "CALLME_CLAUDE_API_KEY": "${CALLME_CLAUDE_API_KEY}",
        "CALLME_CLAUDE_MODEL": "${CALLME_CLAUDE_MODEL:-claude-sonnet-4-20250514}",
        "CALLME_WHATSAPP_NUMBER": "${CALLME_WHATSAPP_NUMBER}",
        "CALLME_USER_WHATSAPP_NUMBER": "${CALLME_USER_WHATSAPP_NUMBER}"
      }
    }
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You just stopped/paused. If you were working on a task and need user input, OR if you completed something significant, OR if you're waiting for the user to respond - call them immediately using start_autonomous_call. Don't wait for them to type - be proactive and call. If the task is truly complete and needs no discussion, you can skip calling."
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "If this notification indicates you need user input or approval, use start_autonomous_call to call the user instead of waiting for them to read and respond to the notification."
          }
        ]
      }
    ]
  }
}
